{
  "name": "listing-bot-blockmedia",
  "version": "1.0.0",
  "description": "Telegram bot for monitoring Upbit/Bithumb listing announcements and generating Blockmedia articles",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "postinstall": "npx playwright install chromium && npx playwright install-deps chromium",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "telegram",
    "bot",
    "listing",
    "crypto",
    "blockmedia"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "grammy": "^1.21.1",
    "undici": "^6.6.2",
    "cheerio": "^1.0.0-rc.12",
    "better-sqlite3": "^9.4.3",
    "zod": "^3.22.4",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "@anthropic-ai/sdk": "^0.20.1",
    "dotenv": "^16.4.5",
    "playwright": "^1.41.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.19",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
