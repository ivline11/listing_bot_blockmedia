# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# LLM / OpenAI Configuration
# Choose the LLM provider: 'gpt' (OpenAI) or 'claude' (Anthropic)
# Default: gpt
LLM_PROVIDER=gpt

# OpenAI API Key (required when LLM_PROVIDER=gpt)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI model to use (optional, defaults to gpt-4o)
# e.g. OPENAI_MODEL=gpt-4o-mini
OPENAI_MODEL=GPT-5 Mini

# Claude API Key (required when LLM_PROVIDER=claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here


# Database Configuration
DB_PATH=./data/db.sqlite

# Monitoring Configuration
# 새우잡이어선 공지방 Chat ID
LISTING_SOURCE_CHAT_ID=your_source_chat_id_here

# Bot Behavior Configuration
# DEFAULT_ENABLED: 0 (off) or 1 (on) - Default state for new chats
DEFAULT_ENABLED=0

# OUTPUT_MODE:
# - source_only: Only send to source chat
# - broadcast: Send to all enabled chats
# - single: Send to a specific output chat
OUTPUT_MODE=broadcast

# Logging Configuration
LOG_LEVEL=info
# LOG_LEVEL options: trace, debug, info, warn, error, fatal

# Optional: Specific output chat (when OUTPUT_MODE=single)
# OUTPUT_CHAT_ID=-1001234567890

# Retry Configuration (optional, defaults shown)
# MAX_SCRAPE_RETRIES=2
# MAX_CLAUDE_RETRIES=2
# MAX_TELEGRAM_RETRIES=2
